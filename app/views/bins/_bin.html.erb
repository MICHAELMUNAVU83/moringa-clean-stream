<div id="<%= dom_id bin %>">
  <p>
    <strong>Location:</strong>
    <%= bin.location %>
  </p>

  <p>
    <strong>Waste level:</strong>
    <%= bin.waste_level %>
  </p>

  <p>
    <strong>Emptied:</strong>
    <%= bin.emptied %>
  </p>

  <% if bin.waste_level > 100 %>
    <p>
      <strong>Bin is full</strong>
    </p>
  <% else %>
    <p>
      <strong>Bin is not full</strong>
    </p>
  <% end %>


</div>
